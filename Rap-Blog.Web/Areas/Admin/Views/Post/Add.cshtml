@using Rap_Blog.CoreLayer.Services.Categories
@model Rap_Blog.Web.Areas.Admin.Models.Posts.CreatePostViewModel
@inject ICategoryService CategoryService;
@{
    ViewData["Title"] = "افزودن پست";
    ViewData["Selected"] = "post";
    var categories = CategoryService.GetAllCategories();
}
<section class="content-header">
    <h1>@ViewData["title"]</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-dashboard"></i>خانه</a></li>
        <li><a href="/Admin/Post/Index">پست ها</a></li>
        <li><a class="active">@ViewData["Title"]</a></li>
    </ol>
</section>

<section class="content">
    <form class="box box-danger" method="post" asp-area="Admin" asp-controller="Post" asp-action="Add" enctype="multipart/form-data">
        <div class="box-body row">
            <div class="col-md-6">
                @Html.EditorFor(m=>m.Title)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(m=>m.Slug)
            </div>
            <div class="col-md-12">
                @Html.EditorFor(m=>m.Description)
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="null">انتخاب کنید</option>
                        @foreach (var item in categories.Where(c => c.ParentId == null))
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SubCategoryId"></label>
                    <select asp-for="SubCategoryId" class="form-control"></select>
                </div>
            </div>
            <div class="col-md-12">
                @Html.EditorFor(m=>m.ImageFile)
            </div>
            <div class="col-md-6">
                @Html.EditorFor(m=>m.IsSpecial)
            </div>
        </div>
        <div class="box box-footer">
            <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
        </div>
    </form>
</section>

@section scripts{
    <script>
        $("#CategoryId").change(function () {
            var categoryId = $(this).val();
            $.ajax({
                url: "/admin/category/GetChildCategories?parentId=" + categoryId,
                type: "get"
            }).done(function (data) {
                console.log(data)
                $("#SubCategoryId").html(`<option value='0'>انتخاب کنید</option>`);

                for (var i in data) {
                    var category = data[i];
                    console.log(category)
                    $("#SubCategoryId").append(`<option value='${category.id}'>${category.title}</option>`);
                }
            });
        })
    </script>
}




