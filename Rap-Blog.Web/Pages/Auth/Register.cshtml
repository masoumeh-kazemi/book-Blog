@page
@model Rap_Blog.Web.Pages.Auth.RegisterModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ثبت نام";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" asp-for="UserName" />
        <br/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <input type="text" placeholder="نام و نام خانوادگی" asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" value="ثبت نام" />
        <a asp-page="Login">ورود</a>
    </div>
</form>